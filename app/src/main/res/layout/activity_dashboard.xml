<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808080"
    android:orientation="vertical"
    tools:context=".DashboardActivity">

    <RelativeLayout
        android:background="#A19B9B"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40sdp">

        <ImageView
            android:id="@+id/qa_back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/back"
            android:clickable="true"
            android:onClick="clickBack"
            app:tint="@color/black" />


        <TextView
            android:id="@+id/qa_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="Exit"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp"
            android:clickable="true"
            android:onClick="clickExit"
            android:textStyle="bold" />


    </RelativeLayout>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp"
        android:id="@+id/quiz_timer"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="false"
        android:max="10"
        android:progress="10"
        android:maxHeight="@dimen/_12sdp"
        android:minHeight="@dimen/_12sdp"
        android:background="#808080" />

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp">

        <TextView
            android:id="@+id/qa_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:background="@color/white"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_25sdp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:onClick="optionAClick"
        android:id="@+id/cardA"
        app:cardCornerRadius="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/qa_option1"
            android:textColor="@color/black"
            android:textSize="@dimen/_30sdp"
            android:layout_gravity="center"
            android:text="2"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:onClick="optionBClick"
        android:id="@+id/cardB"
        app:cardCornerRadius="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/qa_option2"
            android:textColor="@color/black"
            android:textSize="@dimen/_30sdp"
            android:layout_gravity="center"
            android:text="3"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:onClick="optionCClick"
        android:id="@+id/cardC"
        app:cardCornerRadius="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/qa_option3"
            android:textColor="@color/black"
            android:textSize="@dimen/_30sdp"
            android:layout_gravity="center"
            android:text="4"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:onClick="optionDClick"
        android:id="@+id/cardD"
        app:cardCornerRadius="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/qa_option4"
            android:textColor="@color/black"
            android:textSize="@dimen/_30sdp"
            android:layout_gravity="center"
            android:text="5"/>

    </androidx.cardview.widget.CardView>




    <LinearLayout
        android:id="@+id/nextBTN"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/next_button_shape"
        android:layout_marginLeft="@dimen/_45sdp"
        android:layout_marginRight="@dimen/_45sdp"
        android:gravity="center"
        android:backgroundTint="@color/green"
        android:layout_marginTop="@dimen/_40sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_25sdp"
            android:text="Next"/>

    </LinearLayout>


</LinearLayout>
